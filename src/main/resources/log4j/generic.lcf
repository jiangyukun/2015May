log4j.rootCategory=trace, localhost

log4j.appender.localhost=org.apache.log4j.DailyRollingFileAppender
log4j.appender.localhost.append = true
log4j.appender.localhost.File=logs/client2.log
log4j.appender.localhost.DatePattern='-'yyyy-MM-dd'.log'
log4j.appender.localhost.MaxFileSize=100KB
log4j.appender.localhost.MaxBackupIndex=1
log4j.appender.localhost.layout=org.apache.log4j.PatternLayout
log4j.appender.localhost.layout.ConversionPattern=[ip] %d %p %t %c - %m%n
