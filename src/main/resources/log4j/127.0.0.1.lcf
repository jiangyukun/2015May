log4j.rootCategory=trace, localhost

log4j.appender.localhost=org.apache.log4j.RollingFileAppender
log4j.appender.localhost.append = true
log4j.appender.localhost.File=logs/client.log
log4j.appender.localhost.MaxFileSize=100KB
log4j.appender.localhost.MaxBackupIndex=1
log4j.appender.localhost.layout=org.apache.log4j.PatternLayout
log4j.appender.localhost.layout.ConversionPattern=[127.0.0.1] %d %p %t %c - %m%n
